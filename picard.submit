universe = vanilla
container_image = file:///staging/knlawrence/picard.sif
executable = picard.sh
arguments = "$(RUN)"

output = OUT/picard_$(RUN).out
error = ERR/picard_$(RUN).err
log = LOG/picard_$(RUN).log

# Rules to transfer and transferring files
transfer_executable = TRUE
should_transfer_files = IF_NEEDED
transfer_output_files = ""


# Set requirements
Requirements = (Target.HasCHTCStaging == true)
request_cpus = 1
request_memory = 15GB
request_disk = 35GB

queue
